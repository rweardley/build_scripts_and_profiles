PS1="\e[1;31m(NekRS: public-nekRS)\e[0m "$PS1

export PATH=$PATH:/usr/local/cuda-11.8/bin
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/cuda-11.8/lib64

export NEKRS_HOME=$HOME/NekRS/public-nekRS/nekRS
export PATH=$NEKRS_HOME/bin:$PATH
export NRS_RUN=$HOME/NekRS/usr_problems
export NEK5000_TOOLS=$HOME/NekRS/Nek5000/bin
export PATH=$NEK5000_TOOLS:$PATH

alias nrs='cd $NRS_RUN && ls'
